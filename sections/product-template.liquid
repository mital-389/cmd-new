</html>
{% schema %}
  {
    "name": "Product Settings",
    "settings": [
		{
			"type":"text",
			"id":"colorhead",
			"label":"Color Heading",
			"default":"Caramel"
		},
		{
			"type":"text",
			"id":"sizebottomtext",
			"label":"Size Bottom Text",
			"default":"Size Guide"
		},
		{
			"type":"text",
			"id":"btntext",
			"label":"Button Text",
			"default":"Add to Bag"
		},
		{
			"type":"text",
			"id":"que",
			"label":"Ask Question",
			"default":"Have a question about this product?"
		},
		{
			"type":"text",
			"id":"start_date",
			"label":"Start Date"
		},
		{
			"type":"text",
			"id":"end_date",
			"label":"End Date"
		}
	]
  }
{% endschema %}
