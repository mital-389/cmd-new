<!DOCTYPE html>
<html lang="en">
  <body>
    <section class="blog-section blog-detail">
      <div class="container">
        <div class="blog-inner-container">
          <div class="blog-detail-head">
            <h5 class="blog-date">{{ article.published_at | time_tag: format: 'date' }}</h5>
            <h1 class="blog-title">{{ article.title }}</h1>
          </div>
          <div class="blog-image">{{ article.image.src | img_url:'master' | img_tag:'Blog' }}</div>
          <div class="blog-description rte">
            {{ article.content }}
            <div class="blog-tags">
              <span>Tags:</span> {%- if blog.tags != blank -%}{%- for tags in blog.tags -%}<a href="#">{{ tags }}{{', '}}</a>{%- endfor -%}{%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </section>
    {% assign blogarticletitle = article.title %}
    <div class="blog-realted-posts">
      <div class="container">
        <div class="blog-inner-container">
          <div class="sec-title">
            <h3>Related Articles</h3>
            <div class="link-btn"><a href="{{ blog.url }}"> Back to Blog <span>‚ûù</span></a></div>
          </div>
          <div class="related-posts col-row ai-s">
            {%- for article in blog.articles limit: 3 -%}
            {%- if article.title != blogarticletitle -%}
            <div class="related-post col-two">
              <div class="related-image"><a href="{{ article.url }}">{{ article.image.src | img_url:'master' | img_tag }}</a></div>
              <h4><a href="{{ article.url }}">{{ article.title }} </a></h4>
            </div>
            {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
