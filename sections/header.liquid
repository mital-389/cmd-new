<header class="site-header">
  <div class="container">
    <div class="col-row">
      <div class="site-name col-three">
        <div class="menu-icon">
          <a href="javascript:void(0);" class="menu-opener">
            {% if section.settings.mobilebar != blank %}
            {{ section.settings.mobilebar }}
            {% endif %}
          </a>
        </div>
        <h1>{{ section.settings.heading }}</h1>
      </div>
      {% section 'megha-manu' %}
      <div class="logo col-three"><a href="{{ shop.url }}">{% if section.settings.mainimage != blank %}{{ section.settings.mainimage | img_url:'master' | img_tag }}{% elsif section.settings.svglogo1 != blank %}{{  section.settings.svglogo1 }} {% else %} {{ shop.name }} {% endif %}</a></div>
      <div class="right-actions col-three">
        <div class="currency-wrap">
          {% include 'currency-picker' %}
        </div>
        <ul>
          <li class="cart-icon">
            <a href="#">{{ section.settings.svgcart }}<span class="cart-count">{{ cart.item_count }}</span></a>
          </li>
          <li class="search-icon">
            <a href="#">{{ section.settings.svgsearch }}</a>
          </li>
          <li class="menu-icon">
            <a href="javascript:void(0);" class="menu-opener">{{ section.settings.svgbar }}</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<div class="overlay"></div>
<div class="side-navigation">
  <div class="nav-actions">
    <div class="actions">
      <ul>
        <li class="/cart">
          <a href="cart.html">{{ section.settings.svgcart }}<span class="cart-count">{{ cart.item_count }}</span></a>
        </li>
        <li class="search-icon">
          <a href="#">{{ section.settings.svgsearch }}</a>
        </li>
      </ul>
    </div>
    <div class="close">
      <button class="close-btn">{{ section.settings.closebtn }}</button>
    </div>
  </div>
  <div class="nav-menu">
    <ul class="main-menu">
      {%- for link in linklists.side-main-menu.links -%}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {%- endfor -%}
    </ul>
    <ul class="small-menu">
      {%- for link1 in linklists.side-small-manu.links -%}
      <li><a href="{{ link1.url }}">{{ link1.title }}</a></li>
      {%- endfor -%}
    </ul>
  </div>
</div>
<div class="search-box">
  <div class="search-box-inner">
    <div class="container">
      <div class="close">
        <button class="close-btn">{{ section.settings.closebtn }}</button>
      </div>
      <h4>{{ section.settings.searchheading }}</h4>
      <div class="search-form">
        <form action="{{ routes.search_url }}" method="get" role="search" class="search">
          {% comment %}
          only product search
          {% endcomment %}
          <input type="hidden" name="type" value="product">
          <input type="search" name="q" value="{{ search.terms | escape }}" class="input-field" placeholder="{{section.settings.searchplaceholder }}">
        </form>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Header",
    "settings": [
		{
          "type":"text",
          "id":"heading",
          "label":"Header Text",
		  "default":"Fortress of Inca"
		},
		{
          "type":"text",
          "id":"mobilebar",
          "label":"MobileBar"
		},
		{
			"type":"image_picker",
			"id":"mainimage",
			"label":"Logo Image"
		},
		{
          "type":"text",
          "id":"svglogo1",
          "label":"svg Logo"
		},
		{
          "type":"text",
          "id":"svgcart",
          "label":"svg Cart"
		},
		{
          "type":"text",
          "id":"svgsearch",
          "label":"svg Search"
		},
		{
          "type":"text",
          "id":"svgbar",
          "label":"svg Bar"
		},
		{
			"type":"header",
			"content":"Side Menu"
		},
		{
			"type":"text",
			"id":"closebtn",
			"label":"Close Button"
		},
		{
			"type":"header",
			"content":"Search"
		},
		{
			"type":"text",
			"id":"searchheading",
			"label":"Heading",
			"default":"Search Fortress of Inca"
		},
		{
			"type":"text",
			"id":"searchplaceholder",
			"label":"Search Placeholder",
			"default":"Search..."
		}
	]
  }
{% endschema %}