{%- if template != 'index' -%}
  <section class="newsletter single-section">
      <div class="container footer-container">
          <div class="row ai-e">
              <div class="col-two">
                  <div class="subscribe-area">
                      <div class="sec-title">
                          <h2>{{ section.settings.heading }}</h2>
                          <p>{{ section.settings.paragraph }} </p>
                      </div>
                      <div class="subscribe-form">
                          <form>
                              <input type="email" placeholder="{{ section.settings.placeholder }}" class="newsletter-field">
                              <button class="nl-btn">{{ section.settings.svgbtn }}</button>
                          </form>
                      </div>
                  </div>
              </div>
              <div class="col-two">
                  <div class="social-media">
                      <ul class="jc-c">
                          {%- for block in section.blocks -%}
                              <li>
                                {%- if block.type== 'social' -%}
                                  {%- if block.settings.social1 != blank -%}<a href="{{ block.settings.social1 }}">{{ block.settings.social }}</a>{%- endif -%}
                                {%- endif -%}
                              </li>
                          {%- endfor -%}
                      </ul>
                  </div>
              </div>
          </div>
      </div>
  </section>
{%- endif -%}
<footer class="site-footer">
    <div class="footer-top">
        <div class="container footer-container">
            <div class="row">
                <div class="col-three footer-col">
                    <h5>{{ section.settings.footerhead1 }}</h5>
                  	{% assign link=linklists[section.settings.footerlink] %}
                    <ul>
                      {% for link1 in link.links %}
                          <li><a href="#">{{ link1.title }}</a></li>
                      {% endfor %}
                    </ul>
                </div>
                <div class="col-three footer-col">
                    <h5>{{ section.settings.footerhead2 }}</h5>
                  	{% assign link2=linklists[section.settings.footerlink1] %}
                    <ul>
                      {% for link3 in link2.links %}
                        <li><a href="#">{{ link3.title }}</a></li>
                      {% endfor %}
                    </ul>
                </div>
                <div class="col-three footer-col">
                    <h5>{{ section.settings.footerhead3 }}</h5>
                  	{% assign link4=linklists[section.settings.footerlink2] %}
                    <ul>
                      {% for link5 in link4.links %}
                        <li><a href="#">{{ link5.title }}</a></li>
                      {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container footer-container">
            <div class="footer-brand-info">
                <div class="footer-logo"><a href="index.html">{% if section.settings.footerimage != blank %}{{ section.settings.footerimage | img_url | img_tag }}{% else %}{{ shop.name }}{% endif %}</a></div>
                <h3>{{ section.settings.footer }}</h3>
            </div>
            <div class="copyright">{{ section.settings.copyright }} </div>
        </div>
    </div>
</footer>
<a id="slidetop" href="#top" title="top"><i class="fas fa-angle-up"></i></a>
