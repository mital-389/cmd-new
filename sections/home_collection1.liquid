<section class="home-collection">
  <div class="container">
    <div class="col-row">
      {% for block in section.blocks %}
      {% if block.type =='home_collection' %}
      {% assign collection = collections[block.settings.collectionimage1] %}
      {%- if block.settings.collectionimage1 != blank -%}
      <div class="col-two">
        <a href="{{ collection.url }}">
          <div class="image">{{ collection.image | img_url:'master' | img_tag }}</div>
          <div class="content">
            <div class="inner-content">
              <h2>{{ block.settings.collection1text }}</h2>
            </div>
          </div>
        </a>
      </div>
      {%- endif -%}
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Home Collection",
    "settings": [],
	"blocks":[
		{
			"type":"home_collection",
			"name":"Home Collection",
			"settings":[
				{
					"type":"collection",
					"id":"collectionimage1",
					"label":"Choose Image"
				},
				{
					"type":"text",
					"id":"collection1text",
					"label":"Enter Text",
					"default":"Shop New Arrivals"
				}
			]
		}
		
	],
	"presets":[
		{
			"name":"Home Collection",
			"category":"Collection"
		}
	]
  }
{% endschema %}